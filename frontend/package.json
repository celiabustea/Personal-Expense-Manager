{
  "name": "mern-frontend-boilerplate",
  "version": "1.0.0",
  "description": "This is a frontend application built using the MERN stack (MongoDB, Express, React, Node.js) with Next.js and TypeScript.",
  "main": "next.config.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clear-cache": "rimraf .next && rimraf tsconfig.tsbuildinfo && npm cache clean --force",
    "fresh-start": "rimraf .next && rimraf tsconfig.tsbuildinfo && rimraf node_modules && npm install && npm run dev"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.8.2",
    "chart.js": "^4.4.9",
    "clsx": "^2.1.1",
    "critters": "^0.0.23",
    "next": "^15.3.5",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
